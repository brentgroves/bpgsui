{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
	"standard",	    
	"plugin:flowtype/recommended",
        "flowtype-essential",	
	"plugin:react/recommended",
	"prettier",
	"prettier/flowtype",
	"prettier/react",
	"prettier/standard"
    ],
    "parserOptions": {
	"ecmaVersion":6,
	"sourceType": "module",    
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "plugins": [
	"flowtype",    
        "react",
	"prettier",
	"standard"
    ],
    "rules": {
	"prettier/prettier": "error"
    }
}
