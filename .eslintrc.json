{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
	"eslint:recommended",
	"plugin:react/recommended",
	"prettier"
    ],
    "parserOptions": {
	"ecmaVersion":6,
	"sourceType": "module",    
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "plugins": [
        "react",
	"prettier"
    ],
    "rules": {
	"prettier/prettier": "error",
	"react/jsx-uses-react": "error",
	"react/jsx-uses-vars": "error",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
